<% provide(:title, @user.name) %>
<div class="row">
  <aside>
    <h3>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h3>
  </aside>

  <div class="span8">
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
